<Window x:Class="Team_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="310">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Height="20" Width="60" TextAlignment="Center" 
                   VerticalAlignment="Center" Text="Login" FontSize="14" FontFamily="Calibri"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Height="20" Width="60" TextAlignment="Center" 
                   VerticalAlignment="Center" Text="Password" FontSize="14" FontFamily="Calibri"/>

        <TextBox Name="LoginTextBox" Grid.Column="1" Grid.Row="0" Height="20" Width="90"
                 TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2" FontFamily="Calibri" FontSize="14"/>
        <TextBox Name="PasswordTextBox" Grid.Column="1" Grid.Row="1" Height="20" Width="90"
                 TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2" FontSize="14" FontFamily="Calibri"/>

        <Button Name="SignInButton" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Width="70" Height="25" HorizontalAlignment="Center"
                VerticalAlignment="Stretch" Content="Sign in" FontSize="14" FontFamily="Calibri" IsDefault="True" Click="SignInButton_Click"/>
        <Button Name="RegisterButton" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Width="70" Height="25" HorizontalAlignment="Center"
                VerticalAlignment="Stretch" Content="Register" FontSize="14" FontFamily="Calibri" Click="RegisterButton_Click"/>
    </Grid>
</Window>
