<Window x:Class="Team_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Height="20" Width="60" TextAlignment="Center" 
                   VerticalAlignment="Center" Text="Login" FontSize="14" FontFamily="Calibri"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Height="20" Width="60" TextAlignment="Center" 
                   VerticalAlignment="Center" Text="Password" FontSize="14" FontFamily="Calibri"/>
        <TextBox Name="LoginTextBox" Grid.Column="1" Grid.Row="0" Height="20" Width="90"
                 TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2"/>
        <TextBox Name="PasswordTextBox" Grid.Column="1" Grid.Row="1" Height="20" Width="90"
                 TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2"/>

        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Height="25" HorizontalAlignment="Center"
                VerticalAlignment="Stretch" Content="Sign in" FontSize="14" FontFamily="Calibri" IsDefault="True" Width="65"/>
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Width="66" Height="25" HorizontalAlignment="Center"
                VerticalAlignment="Stretch" Content="Register" FontSize="14" FontFamily="Calibri"/>
    </Grid>
</Window>
