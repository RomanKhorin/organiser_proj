<Window x:Class="Team_Project.PlansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plans" Height="380" Width="570">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25" FontSize="14" FontFamily="Calibri"/>
        <Button Content="Delete" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25" FontFamily="Calibri" FontSize="14"/>
        <Button Content="Edit" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25" FontFamily="Calibri" FontSize="14"/>
        <Button Content="Completed" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25" FontFamily="Calibri" FontSize="14"/>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="#FFABADB3" BorderThickness="2,2,2,0" Margin="0,0,10,0">
                <TextBlock Text="Scheduled tasks" Grid.Row="0" Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontFamily="Calibri"/>
            </Border>
           <ListBox Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" BorderThickness="2" Margin="0,0,10,10"/>

    </Grid>
</Window>
