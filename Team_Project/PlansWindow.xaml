<Window x:Class="Team_Project.PlansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plans" Height="380" Width="570">
    <Window.Resources>
        <Style x:Key="ButtonStyle">
            <Setter Property="Control.Background" Value="#FFB42E"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.BorderBrush" Value="#FFB42E"/>
            <Setter Property="Control.FontFamily" Value="Calibry"/>
            <Setter Property="Control.FontSize" Value="14px"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Grid.RowSpan="5" Fill="#FFB42E"/>
        <Button Name="addButton" Content="Add" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25"
                Style="{StaticResource ButtonStyle}"/>
        <Button Name="deleteButton" Content="Delete" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25"
                Style="{StaticResource ButtonStyle}"/>
        <Button Name="editButton" Content="Edit" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="25"
                Style="{StaticResource ButtonStyle}"/>
        <Button Name="comlpetedButton" Content="Completed" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Height="25"
                Style="{StaticResource ButtonStyle}"/>
        <Button Name="exitButton" Content="Exit" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Height="25"
                Style="{StaticResource ButtonStyle}" Margin="0,110,0,0" Click="exitButton_Click"/>

        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#FFB42E" BorderThickness="0,2,2,0" Margin="0,0,1,0">
            <TextBlock Text="Scheduled tasks" Grid.Row="0" Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="14" FontFamily="Calibri" Height="25" Width="100"/>
        </Border>

        <ListBox x:Name="plansListBox" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" HorizontalContentAlignment="Stretch" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0,2,2,2" Margin="0,0,1,1" FontSize="14" FontFamily="Calibri" BorderBrush="#FFB42E"/>
    </Grid>
</Window>
